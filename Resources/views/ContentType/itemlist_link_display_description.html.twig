{# Purpose of this template: Display links within an external context #}
<dl>
    {% for link in items %}
        <dt>{{ link|rkdownlinkmodule_formattedTitle }}</dt>
        {% if link.myDescription %}
            <dd>{{ link.myDescription|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('rkdownlinkmodule_link_display', {'id': link.getId()}) }}" title="{{ __('Read more')|e('html_attr') }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
